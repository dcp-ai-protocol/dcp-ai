{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dcp-ai.org/schemas/v1/revocation_record.schema.json",
  "title": "RevocationRecord",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "dcp_version",
    "agent_id",
    "human_id",
    "timestamp",
    "reason",
    "signature"
  ],
  "properties": {
    "dcp_version": {
      "type": "string",
      "pattern": "^1\\.0$"
    },
    "agent_id": {
      "type": "string",
      "minLength": 6
    },
    "human_id": {
      "type": "string",
      "minLength": 6
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "reason": {
      "type": "string",
      "minLength": 1
    },
    "signature": {
      "type": "string",
      "minLength": 8
    }
  }
}